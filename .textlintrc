{
  "filters": {
    "allowlist": {
      "allow": [
        "/株式会社/g",
        "ヘッダ",
        "/Active Record/",
        "/:::/",
        "/:::details\\s.*/",
        "はじめに",
        "express"
      ]
    }
  },
  "rules": {
    "preset-ja-spacing": {
      "ja-space-between-half-and-full-width": {
        "space": "always"
      }
    },
    "preset-ja-technical-writing": {
      "max-kanji-continuous-len": {
        "max": 7
      },
      "sentence-length": {
        "max": 160
      }
    },
    "spellcheck-tech-word": true,
    "prh": {
      "rulePaths": [
        "rules/prh.yml",
        "rules/WEB+DB_PRESS.yml"
      ]
    }
  }
}
